<h1><%= @article.title %></h1>

<p><%= @article.text %></p>

<h2>Comments</h2>

<% @article.comments.each do |comment| %>

<p><strong>Author:</strong> <%= comment.author %></p>
<p><%= comment.body %></p>
<hr>

<% end %>

<h2>Add comments</h2>
<p>
<%= form_for([@article, @article.comments.build]) do |f| %>

  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>

  <p><%= f.submit %></p>

<% end %>
</p>
